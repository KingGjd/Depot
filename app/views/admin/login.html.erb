<div class = "depot-form">
  <%= form_tag do %>
    <fieldset>
      <legend><%= t('admin.login.please_login') %> </legend>

      <div>
        <label for = "name"><%= t('admin.login.name') %> :</label>
        <%= text_field_tag :name, params[:name]%>
      </div>

      <div>
        <label for ="password"><%= t('admin.login.password') %>:</label>
        <%= password_field_tag :password , params[:password] %>
      </div>

      <div>
        <%= submit_tag t('admin.login.submit') %>
      </div>
      <div class="sina">
        <%= link_to "/syncs/gjd/sina_new" do %>
          <%= image_tag("/assets/sina_login.png", :align => "absmiddle") -%>使用新浪微博登入
        <%- end -%>
      </div>

      <div class="sina">
        <%= link_to "/syncs/depot/douban_new" do %>
          <%= image_tag("/assets/sina_login.png", :align => "absmiddle") -%>豆瓣登入
        <%- end -%>
      </div>

    </fieldset>
  <% end %>
</div>

