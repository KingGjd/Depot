<%= form_for([:admin, @product], :html => {:multipart => true}) do |f| %>
  <%= render :partial => "shared/error_message", :locals => {:object => @product} %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%#= f.label :image_url %><br />
    <%#= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br />
    <%= f.file_field :file %>
  </div>
  <div class="field">
    <%=f.label :price %><br/>
    <%= f.text_field :price %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
