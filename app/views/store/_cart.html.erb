<% unless cart.items.empty? %>
  <div class = "cart-title"> <%= t 'layout.cart.title' -%></div>
<table>

  <%= render( :partial => "cart_item" , :collection => cart.items) %>

  <tr class = "total-line" >
    <td colspan = "2"><%= t('store.total') %></td>
    <td><%= number_to_currency(cart.total_price)%> </td>
    <td colspan="2">&nbsp;</td>
  </tr>
</table>
  <% if current_user %>
    <%= button_to t('layout.cart.button.checkout'), {:action => 'checkout'}, {:style => "cursor:pointer"} %>
  <% else %>
    <%= button_to t('layout.cart.button.checkout'), admin_login_path, {:method => "get", :style => "cursor:pointer"} %>
  <% end %>
  <%= button_to t('layout.cart.button.empty'), {:action => :empty_cart}, {:style => "cursor:pointer"}%>
<% end %>
